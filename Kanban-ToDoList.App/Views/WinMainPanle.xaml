<Window x:Class="Kanban_ToDoList.App.Views.WinMainPanle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_ToDoList.App.Views"
        mc:Ignorable="d"
        Title="Kanban ToDoList" Height="600" Width="900" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <DockPanel>

        <!-- Top bar -->
        <Grid DockPanel.Dock="Top" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Left side for buttons -->
                <ColumnDefinition Width="Auto" />
                <!-- Right side for clock -->
            </Grid.ColumnDefinitions>

            <!-- Buttons on the left -->
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <!-- Users List button -->
                <Button Content="Users List" Margin="5" 
                Padding="12 6" FontWeight="Bold" Foreground="White" 
                Background="#0078D7" BorderBrush="#005A9E" BorderThickness="1" Cursor="Hand"
                Name="btnUsers" Click="btnUsers_Click"
        />

                <!-- Log Out button -->
                <Button Content="Log Out" Margin="5" 
                Padding="12 6" FontWeight="Bold" Foreground="White" 
                Background="#107C10" BorderBrush="#0B5C0B" BorderThickness="1" Cursor="Hand"
                Name="btnLogOut" Click="btnLogOut_Click"
        />

                <!-- New Task button -->
                <Button Content="New Task" Margin="5" 
                Padding="14 8" FontWeight="Bold" Foreground="White" 
                Background="#E81123" BorderBrush="#B50D1E" BorderThickness="1" Cursor="Hand"
                Name="btnCreatedTask" Click="btnCreatedTask_Click"
        />
            </StackPanel>

            <!-- Live clock on the right -->
            <TextBlock x:Name="txtClock" FontWeight="Bold" FontSize="14" 
               Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Right"
               Grid.Column="1" Margin="0,0,20,0"/>
            <!-- Clock updates every second -->
        </Grid>



        <!-- Main Panel -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ToDo -->
                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="ToDo" FontWeight="Bold" FontSize="14" 
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                        <StackPanel x:Name="PanelToDo"/>
                    </DockPanel>
                </Border>

                <!-- Doing -->
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="Doing" FontWeight="Bold" FontSize="14" 
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                        <StackPanel x:Name="PanelDoing"/>
                    </DockPanel>
                </Border>

                <!-- Review -->
                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="Review" FontWeight="Bold" FontSize="14" 
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                        <StackPanel x:Name="PanelReview"/>
                    </DockPanel>
                </Border>

                <!-- Done -->
                <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="Done" FontWeight="Bold" FontSize="14" 
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                        <StackPanel x:Name="PanelDone"/>
                    </DockPanel>
                </Border>

                <!-- Cancelled -->
                <Border Grid.Column="4" BorderBrush="Black" BorderThickness="1" Margin="3">
                    <DockPanel>
                        <TextBlock Text="Cancelled" FontWeight="Bold" FontSize="14" 
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                        <StackPanel x:Name="PanelCancelled"/>
                    </DockPanel>
                </Border>
            </Grid>
        </ScrollViewer>


    </DockPanel>
</Window>