<Window x:Class="Kanban_ToDoList.App.Views.WinEditOrAddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_ToDoList.App.Views"
        mc:Ignorable="d"
        Title="Edit User" Height="370" Width="350" WindowStartupLocation="CenterScreen"
        Background="#FAFAFA" Loaded="Window_Loaded">

    <Grid Margin="20,20,20,36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Edit User" Name="txtTitle" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" Margin="10,5,10,5" VerticalAlignment="Top" >

            <Label Content="Username" />
            <TextBox Name="txtUsername" Height="25" Margin="0,0,0,10"/>

            <Label Content="Password" />
            <PasswordBox Name="txtPassWord" Height="25" Margin="0,0,0,10"/>

            <Label Content="Confirm Password" />
            <PasswordBox Name="txtPassWordCeck" Height="25"/>

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <Button Content="Save" Name="btnAddOrEditUser" Width="80" Height="30" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" Click="btnAddOrEditUser_Click"/>
            <Button Content="Close" Name="btnColseOrBack" Width="80" Height="30" Background="#F44336" Foreground="White" Click="btnColseOrBack_Click"/>
        </StackPanel>

    </Grid>
</Window>