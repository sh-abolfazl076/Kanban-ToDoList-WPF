<Window x:Class="Kanban_ToDoList.App.Views.WinEditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" Height="370" Width="350" WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="20,20,20,36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Edit User" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" Margin="10,5,10,5" VerticalAlignment="Top" >
            
            <Label Content="Username" />
            <TextBox Name="txtChangeUsernameSignup" Height="25" Margin="0,0,0,10"/>

            <Label Content="Password" />
            <PasswordBox Name="txtChangePassSignup" Height="25" Margin="0,0,0,10"/>

            <Label Content="Confirm Password" />
            <PasswordBox Name="txtChangePassCeckSignup" Height="25"/>
            
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <Button Content="Save" Name="btnSaveEditUser" Width="80" Height="30" Margin="0,0,10,0" Background="#4CAF50" Foreground="White"/>
            <Button Content="Close" Name="btnColse" Width="80" Height="30" Background="#F44336" Foreground="White"/>
        </StackPanel>
        
    </Grid>
</Window>