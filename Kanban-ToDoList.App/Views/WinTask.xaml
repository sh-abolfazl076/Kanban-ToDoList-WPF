<Window x:Class="Kanban_ToDoList.App.Views.WinTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_ToDoList.App.Views"
        mc:Ignorable="d"
        Title="Task Window" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Info -->
            <RowDefinition Height="Auto"/>
            <!-- Stage + Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- ComboBox -->
            <ColumnDefinition Width="Auto"/>
            <!-- Buttons -->
        </Grid.ColumnDefinitions>

        <!-- Title TextBox -->
        <TextBox Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10" Name="txtTitle" Height="30" />

        <!-- Info TextBox -->
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" AcceptsReturn="True" 
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" 
                 Margin="0,0,0,10" Name="txtInfo"/>

        <!-- ComboBox -->
        <ComboBox Grid.Row="2" Grid.Column="0" Name="comboBoxStage" Height="30" Margin="0,0,10,0">
            <ComboBoxItem Content="ToDo" Name="ToDoStage"/>
            <ComboBoxItem Content="Doing" Name="DoingStage"/>
            <ComboBoxItem Content="Review" Name="ReviewStage"/>
            <ComboBoxItem Content="Done" Name="DoneStage"/>
            <ComboBoxItem Content="Cancelled" Name="CancelledStage"/>
        </ComboBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Edit" Width="80" Height="30" 
                    Background="#28A745" Foreground="White" FontWeight="Bold" 
                    Name="btnSaveChange" Click="btnSaveChange_Click" Margin="0,0,10,0"/>
            <Button Content="Close" Width="80" Height="30" 
                    Background="#17A2B8" Foreground="White" FontWeight="Bold" 
                    x:Name="btnClose" Click="btnClose_Click"  Margin="0,0,10,0" />
            <Button Content="Remove" Width="80" Height="30" 
                    Background="#E91E63" Foreground="White" FontWeight="Bold" 
                    Name="btnRemove" Click="btnRemove_Click" />
        </StackPanel>
    </Grid>
</Window>