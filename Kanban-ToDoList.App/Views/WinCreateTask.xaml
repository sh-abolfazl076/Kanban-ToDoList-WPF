<Window x:Class="Kanban_ToDoList.App.Views.WinCreateTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_ToDoList.App.Views"
        mc:Ignorable="d"
        Title="CreateTask" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">


    <Border BorderBrush="#D0D0D0" BorderThickness="1" CornerRadius="6" Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Part Users -->
            <GroupBox Header="Users" FontWeight="Bold" Grid.Column="0" Margin="5">
                <DockPanel>
                    <TextBox DockPanel.Dock="Top" Margin="5" Name="txtSearch" TextChanged="Search_TextChanged"/>

                    <ListView Margin="5" Name="dgvGetUsers">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="User" Width="150" DisplayMemberBinding="{Binding UserName}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </GroupBox>

            <!-- Part Task -->
            <GroupBox Header="Task" FontWeight="Bold" Grid.Column="1" Margin="5">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Title :" Width="50" VerticalAlignment="Center"/>
                        <TextBox Width="235" Name="btnTitle"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Info :" Width="50" VerticalAlignment="Top"/>
                        <TextBox Width="235" Height="245" TextWrapping="Wrap" AcceptsReturn="True" Name="btnInfo"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- btn Create -->
            <Button Content="Create"
                    Grid.Column="1" Grid.Row="1"
                    HorizontalAlignment="Right" 
                    Margin="10"
                    Padding="10 5"
                    FontWeight="Bold"
                    Background="#FF007F"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Width="100"
                    Name="btnAddTask"/>
        </Grid>
    </Border>
</Window>