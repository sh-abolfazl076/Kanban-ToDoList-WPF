<Window x:Class="Kanban_ToDoList.App.Views.WinLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_ToDoList.App.Views"
        mc:Ignorable="d"
        Title="Window Login" Height="313" Width="350" WindowStartupLocation="CenterScreen">




<Grid Margin="20,20,20,36">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Title -->
    <TextBlock Text="Welcome !"  FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

    <!-- Inputs -->
    <StackPanel Grid.Row="1" Margin="10,5,10,5" VerticalAlignment="Top" >

        <Label Content="Username" />
        <TextBox Name="txtUsernameLogin" Height="25" Margin="0,0,0,10"/>

        <Label Content="PassWord" />
        <PasswordBox Name="txtPasswordLogin" Height="25" Margin="0,0,0,10"/>

    </StackPanel>

    <!-- Buttons -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
            <Button Content="Connection Check" Name="btnWinConnection" Margin="0,0,0,0" Width="110" Height="30" FontWeight="Bold" Background="#FF9800" Foreground="White" Click="btnWinConnection_Click" />
            <Button Content="Sing Up" Name="btnWinRegister" Width="75" Margin="8,0,0,0" Height="30" FontWeight="Bold" Background="#2196F3" Foreground="White" Click="btnWinRegister_Click" />
            <Button Content="Login" Name="btnLogin" Width="75" Height="30" Margin="7,0,0,0" FontWeight="Bold" Background="#4CAF50" Foreground="White" Click="btnLogin_Click"/>
    </StackPanel>

</Grid>
</Window>