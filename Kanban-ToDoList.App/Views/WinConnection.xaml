<Window x:Class="Kanban_ToDoList.App.Views.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_ToDoList.App.Views"
        mc:Ignorable="d"
        Title="Connection Window" Height="400" Width="363" Background="#FFFDF9F9" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="0,0,10,0" OpacityMask="#FFFDF9F9">
        <Grid>
            <!--Server name-->
            <TextBox HorizontalAlignment="Left" Margin="125,60,0,0" TextWrapping="Wrap" Text=".\Moein" VerticalAlignment="Top" Width="189" Height="23" Name="txtServer"/>
            <Label Content="Server" HorizontalAlignment="Left" Margin="30,52,0,0" VerticalAlignment="Top" FontSize="16"/>

            <!--PassWord name-->
            <TextBox HorizontalAlignment="Left" Margin="125,110,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189" Height="23" Name="txtDatabes"/> 
            <Label Content="PassWord" HorizontalAlignment="Left" Margin="30,102,0,0" VerticalAlignment="Top" FontSize="16"/>
            

            <!--User name-->
            <TextBox HorizontalAlignment="Left" Margin="125,162,0,0" TextWrapping="Wrap" Text="sa" VerticalAlignment="Top" Width="189" Height="23" Name="txtUser"/>
            <Label Content="User" HorizontalAlignment="Left" Margin="30,154,0,0" VerticalAlignment="Top" FontSize="16"/>

            <!--Databes name-->
            <TextBox HorizontalAlignment="Left" Margin="125,225,0,0" TextWrapping="Wrap" Text="Moein" VerticalAlignment="Top" Width="189" Height="23" Name="txtPass"/>
            <Label Content="Database" HorizontalAlignment="Left" Margin="30,217,0,0" VerticalAlignment="Top" FontSize="16"/>

        </Grid>
        <Grid>
            <Button Content="Checking" Margin="217,32,39,-63" BorderBrush="#FFEA8D8D" Background="#FFFFD2D2" Click="Button_Click" Name="btnSave"/>
        </Grid>
    </StackPanel>
</Window>
