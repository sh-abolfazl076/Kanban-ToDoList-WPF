<Window x:Class="Kanban_ToDoList.App.Views.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_ToDoList.App.Views"
        mc:Ignorable="d"
        Title="Connection Window" Height="445" Width="380" 
        Background="#FAFAFA" WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Database Connection" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Inputs -->
        <StackPanel Grid.Row="1" Margin="10" VerticalAlignment="Top" >
            <Label Content="Server"/>
            <TextBox Name="txtServer" Height="25" Margin="0,0,0,10"/>

            <Label Content="Database"/>
            <TextBox Name="txtDatabes" Height="25" Margin="0,0,0,10"/>

            <Label Content="User"/>
            <TextBox Name="txtUser" Height="25" Margin="0,0,0,10"/>

            <Label Content="Password"/>
            <TextBox Name="txtPass" Height="25"/>
        </StackPanel>

        <!-- Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Check Connection" Name="btnCheckDB" 
                    Width="140" Height="35" 
                    Background="#2196F3" Foreground="White" 
                    FontWeight="Bold" 
                    Click="btnCheckDB_Click"/>
        </StackPanel>
    </Grid>
</Window>