<Window x:Class="Kanban_ToDoList.App.Views.WinUsersList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban_ToDoList.App.Views"
        mc:Ignorable="d"
        Title="UserList" Height="450" Width="500" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <DockPanel HorizontalAlignment="Stretch">
        <!-- Top bar -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10">
            <!-- Users -->
            <Button Content="Add User" Margin="5" 
                    Padding="12 6" FontWeight="Bold" Foreground="White" 
                    Background="#0078D7" BorderBrush="#005A9E" BorderThickness="1" Cursor="Hand"
                    x:Name="btnUsers"/>

        </StackPanel>


        <!-- Users Panel -->
        <Grid Margin="10,0,10,0" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Users -->
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,0,1" Margin="3,3,0,3">
                <DockPanel>
                    <TextBlock Text="Users" FontWeight="Bold" FontSize="14" 
                               DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                    <StackPanel x:Name="PanelUsers"/>
                </DockPanel>
            </Border>

            <!-- Permissions -->
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,1,0,1" Margin="0,3,0,3">
                <DockPanel>
                    <TextBlock Text="Permissions" FontWeight="Bold" FontSize="14" 
                               DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                    <StackPanel x:Name="PanelPermission"/>
                </DockPanel>
            </Border>

            <!-- Edit -->
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,1,0,1" Margin="0,3,0,3">
                <DockPanel>
                    <TextBlock Text="Edit" FontWeight="Bold" FontSize="14" 
                               DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                    <StackPanel x:Name="PanelEdit"/>
                </DockPanel>
            </Border>

            <!-- Remove -->
            <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0,1,1,1" Margin="0,3,0,3">
                <DockPanel>
                    <TextBlock Text="Remove" FontWeight="Bold" FontSize="14" 
                               DockPanel.Dock="Top" TextAlignment="Center" Margin="5"/>
                    <StackPanel x:Name="PanelRemove"/>
                </DockPanel>
            </Border>

        </Grid>
    </DockPanel>
</Window>